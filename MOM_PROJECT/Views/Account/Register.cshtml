@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<title>Create Account | MOM System</title>

<style>
/* ===== RESET ===== */
*{
    box-sizing:border-box;
    margin:0;
    padding:0;
    font-family:Arial, sans-serif;
}

/* ===== BACKGROUND ===== */
body{
    min-height:100vh;
    background:linear-gradient(180deg,#4f46e5,#4338ca);
    display:flex;
    justify-content:center;
    align-items:center;
}

/* ===== CARD ===== */
.register-card{
    width:780px;
    background:#f5f7ff;
    border-radius:22px;
    box-shadow:0 30px 60px rgba(0,0,0,.25);
    overflow:hidden;
}

/* ===== HEADER ===== */
.card-header{
    text-align:center;
    padding:45px 40px 30px;
}

.card-header h3{
    font-size:18px;
    margin-bottom:10px;
}

.card-header h2{
    font-size:30px;
    margin-bottom:12px;
}

.card-header p{
    color:#555;
    font-size:15px;
}

/* ===== FORM BODY ===== */
.card-body{
    background:#fff;
    padding:35px 45px;
}

/* ===== ROW SYSTEM ===== */
.form-row{
    display:flex;
    gap:20px;
    margin-bottom:22px;
}

.form-group{
    flex:1;
}

/* ===== INPUTS ===== */
input, select{
    width:100%;
    padding:14px 16px;
    border-radius:14px;
    border:1px solid #ddd;
    outline:none;
    font-size:14px;
    background:#fff;
}

small{
    display:block;
    margin-top:6px;
    font-size:12px;
    color:#777;
}

/* ===== BUTTON ===== */
button{
    width:100%;
    padding:16px;
    margin-top:10px;
    border:none;
    border-radius:16px;
    font-size:17px;
    font-weight:600;
    color:#fff;
    background:linear-gradient(90deg,#6366f1,#7c3aed);
    cursor:pointer;
}

/* ===== FOOTER ===== */
.card-footer{
    background:#f5f7ff;
    text-align:center;
    padding:22px;
    font-size:15px;
}

.card-footer a{
    color:#4f46e5;
    text-decoration:none;
    font-weight:600;
}
</style>
</head>

<body>

<div class="register-card">

    <!-- HEADER -->
    <div class="card-header">
        <h3>ðŸ‘¤âž• Join MOM System</h3>
        <h2>Create Account</h2>
        <p>Join the meeting management system to organize and track meetings efficiently</p>
    </div>

    <!-- FORM -->
    <div class="card-body">
        <form>

            <div class="form-row">
                <div class="form-group">
                    <input type="text" placeholder="Username">
                    <small>3-50 characters required</small>
                </div>

                <div class="form-group">
                    <select>
                        <option>Select Role</option>
                        <option>Admin</option>
                        <option>Member</option>
                    </select>
                </div>
            </div>

            <div class="form-row">
                <div class="form-group">
                    <input type="password" placeholder="Password">
                    <small>Minimum 6 characters</small>
                </div>

                <div class="form-group">
                    <input type="password" placeholder="Confirm Password">
                </div>
            </div>

            <div class="form-row">
                <div class="form-group">
                    <select>
                        <option>Staff Member (Optional)</option>
                    </select>
                    <small>Link to a staff member for better tracking</small>
                </div>
            </div>

            <button type="submit">ðŸ‘¤ Create Account</button>
        </form>
    </div>

    <!-- FOOTER -->
    <div class="card-footer">
        Already have an account?
        <a href="@Url.Action("Login","Account")">Sign in here</a>
    </div>

</div>

</body>
</html>
<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <title>MOM – Meeting Type List</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />

  <!-- Bootstrap -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />

  <!-- Simple Datatables -->
  <link href="https://cdn.jsdelivr.net/npm/simple-datatables@latest/dist/style.css" rel="stylesheet" />

  <style>
    body {
      background: linear-gradient(135deg, #eef2ff, #f8fafc);
      font-family: "Inter", sans-serif;
    }

    .card {
      border: none;
      border-radius: 18px;
      background: #ffffff;
      box-shadow: 0 15px 40px rgba(79, 70, 229, 0.12);
    }

    .card-body {
      padding: 28px;
    }

    /* TABLE */
    .table {
      width: 100%;
      table-layout: fixed;
      border-collapse: separate;
      border-spacing: 0 12px;
    }

    .table thead th,
    .table tbody td {
      padding: 16px 18px;
      vertical-align: middle;
      font-size: 14px;
    }

    .table thead th {
      background: #eef2ff;
      font-weight: 600;
      color: #3730a3;
    }

    /* ROW */
    .table tbody tr {
      background: #ffffff;
      transition: 0.25s ease;
    }

    .table tbody tr:hover {
      transform: translateY(-1px);
      box-shadow: 0 10px 30px rgba(79, 70, 229, 0.18);
    }

    /* COLUMN ALIGNMENT */
    .table thead th:last-child,
    .table tbody td:last-child {
      text-align: center;
    }

    /* COLUMN WIDTHS */
    .table th:nth-child(1),
    .table td:nth-child(1) {
      width: 35%;
    }

    .table th:nth-child(2),
    .table td:nth-child(2) {
      width: 40%;
    }

    .table th:nth-child(3),
    .table td:nth-child(3) {
      width: 25%;
    }

    /* ACTION BUTTON FIX */
    .action-btns {
      display: flex;
      justify-content: center;
      align-items: center;
      gap: 8px;
      flex-wrap: wrap;
      max-width: 100%;
    }

    .action-btns .btn {
      white-space: nowrap;
      padding: 4px 14px;
    }

    .btn-outline-primary {
      border-color: #6366f1;
      color: #4f46e5;
    }

    .btn-outline-primary:hover {
      background: #4f46e5;
      color: #ffffff;
    }

    .btn-outline-danger {
      border-color: #ef4444;
      color: #dc2626;
    }

    .btn-outline-danger:hover {
      background: #dc2626;
      color: #ffffff;
    }
  </style>
</head>

<body>
  <div class="container-fluid mt-4">
    <div class="card">
      <div class="card-body">
        <div class="d-flex justify-content-between align-items-center mb-3">
          <h5 class="mb-0">MOM – Meeting Type List</h5>
          <a asp-action="MeetingTypeAddEdit" asp-controller="MeetingType"
            class="btn btn-primary rounded-pill px-4">+ Add Meeting Type</a>
        </div>

        <table class="table datatable">
          <thead>
            <tr>
              <th>Meeting Type Name</th>
              <th>Remarks</th>
              <th>Action</th>
            </tr>
          </thead>

          <tbody>
            <tr>
              <td>Status Update</td>
              <td>Weekly project progress discussion</td>
              <td>
                <div class="action-btns">
                  <a asp-action="MeetingTypeAddEdit" asp-controller="MeetingType"
                    class="btn btn-sm btn-outline-primary rounded-pill">Edit</a>
                  <a class="btn btn-sm btn-outline-danger rounded-pill"
                    onclick="return confirm('Delete this meeting type?');">Delete</a>
                </div>
              </td>
            </tr>

            <tr>
              <td>Planning Meeting</td>
              <td>Initial planning and scope definition</td>
              <td>
                <div class="action-btns">
                  <a asp-action="MeetingTypeAddEdit" asp-controller="MeetingType"
                    class="btn btn-sm btn-outline-primary rounded-pill">Edit</a><a
                    class="btn btn-sm btn-outline-danger rounded-pill">Delete</a>
                </div>
              </td>
            </tr>
            <tr>
              <td>Review Meeting</td>
              <td>Review completed tasks</td>
              <td>
                <div class="action-btns">
                  <a asp-action="MeetingTypeAddEdit" asp-controller="MeetingType"
                    class="btn btn-sm btn-outline-primary rounded-pill">Edit</a><a
                    class="btn btn-sm btn-outline-danger rounded-pill">Delete</a>
                </div>
              </td>
            </tr>
            <tr>
              <td>Client Meeting</td>
              <td>Client interaction and feedback</td>
              <td>
                <div class="action-btns">
                  <a asp-action="MeetingTypeAddEdit" asp-controller="MeetingType"
                    class="btn btn-sm btn-outline-primary rounded-pill">Edit</a><a
                    class="btn btn-sm btn-outline-danger rounded-pill">Delete</a>
                </div>
              </td>
            </tr>
            <tr>
              <td>Technical Discussion</td>
              <td>Technical challenges and solutions</td>
              <td>
                <div class="action-btns">
                  <a asp-action="MeetingTypeAddEdit" asp-controller="MeetingType"
                    class="btn btn-sm btn-outline-primary rounded-pill">Edit</a><a
                    class="btn btn-sm btn-outline-danger rounded-pill">Delete</a>
                </div>
              </td>
            </tr>
            <tr>
              <td>Design Review</td>
              <td>UI/UX and architecture review</td>
              <td>
                <div class="action-btns">
                  <a asp-action="MeetingTypeAddEdit" asp-controller="MeetingType"
                    class="btn btn-sm btn-outline-primary rounded-pill">Edit</a><a
                    class="btn btn-sm btn-outline-danger rounded-pill">Delete</a>
                </div>
              </td>
            </tr>
            <tr>
              <td>Sprint Retrospective</td>
              <td>Post sprint analysis</td>
              <td>
                <div class="action-btns">
                  <a asp-action="MeetingTypeAddEdit" asp-controller="MeetingType"
                    class="btn btn-sm btn-outline-primary rounded-pill">Edit</a><a
                    class="btn btn-sm btn-outline-danger rounded-pill">Delete</a>
                </div>
              </td>
            </tr>
            <tr>
              <td>Budget Review</td>
              <td>Cost and budget analysis</td>
              <td>
                <div class="action-btns">
                  <a asp-action="MeetingTypeAddEdit" asp-controller="MeetingType"
                    class="btn btn-sm btn-outline-primary rounded-pill">Edit</a><a
                    class="btn btn-sm btn-outline-danger rounded-pill">Delete</a>
                </div>
              </td>
            </tr>
            <tr>
              <td>Training Session</td>
              <td>Skill enhancement session</td>
              <td>
                <div class="action-btns">
                  <a asp-action="MeetingTypeAddEdit" asp-controller="MeetingType"
                    class="btn btn-sm btn-outline-primary rounded-pill">Edit</a><a
                    class="btn btn-sm btn-outline-danger rounded-pill">Delete</a>
                </div>
              </td>
            </tr>
            <tr>
              <td>Closure Meeting</td>
              <td>Project closure discussion</td>
              <td>
                <div class="action-btns">
                  <a asp-action="MeetingTypeAddEdit" asp-controller="MeetingType"
                    class="btn btn-sm btn-outline-primary rounded-pill">Edit</a><a
                    class="btn btn-sm btn-outline-danger rounded-pill">Delete</a>
                </div>
              </td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/simple-datatables@latest"></script>
  <script>
    new simpleDatatables.DataTable(".datatable");
  </script>
</body>

</html>
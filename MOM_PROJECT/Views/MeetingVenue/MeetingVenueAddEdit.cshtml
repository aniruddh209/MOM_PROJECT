@{
    ViewData["Title"] = "Add New Meeting Venue";
}

<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8" />
<meta name="viewport" content="width=device-width, initial-scale=1.0" />

<title>Add New Meeting Venue</title>

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />

<style>
body{
  background: linear-gradient(135deg,#eef2ff,#f8fafc);
  font-family: "Inter", sans-serif;
}

/* PAGE HEADER */
.page-title{
  font-size:28px;
  font-weight:700;
}
.page-subtitle{
  color:#6b7280;
}

/* CARD */
.venue-card{
  background:#ffffff;
  border-radius:18px;
  box-shadow:0 15px 40px rgba(79,70,229,0.15);
  overflow:hidden;
  max-width:900px;
  margin:auto;
}

/* CARD HEADER */
.venue-card-header{
  background:linear-gradient(135deg,#6366f1,#7c3aed);
  color:#fff;
  padding:18px 24px;
  font-size:18px;
  font-weight:600;
}

/* CARD BODY */
.venue-card-body{
  padding:30px;
}

/* INPUT */
.form-control{
  border-radius:12px;
  padding:14px 16px;
}

.form-control:focus{
  border-color:#6366f1;
  box-shadow:0 0 0 .15rem rgba(99,102,241,.25);
}

/* ICON INPUT */
.input-group-text{
  background:#f8fafc;
  border-radius:12px 0 0 12px;
}

/* BUTTONS */
.btn-primary{
  background:linear-gradient(135deg,#4f46e5,#6366f1);
  border:none;
  border-radius:999px;
  padding:10px 26px;
}

.btn-secondary{
  border-radius:999px;
}

/* FOOTER ACTIONS */
.form-actions{
  display:flex;
  justify-content:flex-end;
  gap:16px;
  margin-top:30px;
}
</style>
</head>

<body>

<div class="container-fluid mt-4">

<!-- PAGE TITLE -->
<div class="mb-4">
  <div class="page-title">Add New Meeting Venue</div>
  <div class="page-subtitle">Create a new meeting venue</div>
</div>

<!-- CARD -->
<div class="venue-card">

  <!-- CARD HEADER -->
  <div class="venue-card-header">
    üìç Add New Meeting Venue
  </div>

  <!-- CARD BODY -->
  <div class="venue-card-body">

    <form>

      <!-- VENUE NAME -->
      <div class="mb-3">
        <label class="form-label fw-semibold">Venue Name</label>

        <div class="input-group">
          <span class="input-group-text">üìç</span>
          <input type="text"
                 class="form-control"
                 placeholder="Enter meeting venue name" />
        </div>

        <small class="text-muted">
          e.g., Conference Room A, Board Room, Virtual (Zoom), Auditorium
        </small>
      </div>

      <!-- ACTION BUTTONS -->
      <div class="form-actions">
        <a asp-action="MeetingVenueList"
           asp-controller="MeetingVenue"
           class="btn btn-secondary">
          ‚Üê Back to List
        </a>

        <button type="submit" class="btn btn-primary">
          ‚úî Create Venue
        </button>
      </div>

    </form>

  </div>
</div>

</div>

</body>
</html>
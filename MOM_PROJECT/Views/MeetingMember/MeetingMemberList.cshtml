<tr><td>6</td><td><span class="badge-present">Present</span></td><td>Gave presentation</td><td><div class="action-btns"><a asp-action="MeetingMemberAddEdit" asp-controller="MeetingMember" class="btn btn-sm btn-outline-primary rounded-pill">Edit</a><a class="btn btn-sm btn-outline-danger rounded-pill" onclick="return confirm('Delete?')">Delete</a></div></td></tr>
<tr><td>7</td><td><span class="badge-present">Present</span></td><td>Note taking</td><td><div class="action-btns"><a asp-action="MeetingMemberAddEdit" asp-controller="MeetingMember" class="btn btn-sm btn-outline-primary rounded-pill">Edit</a><a class="btn btn-sm btn-outline-danger rounded-pill" onclick="return confirm('Delete?')">Delete</a></div></td></tr>
<tr><td>8</td><td><span class="badge-absent">Absent</span></td><td>Out of station</td><td><div class="action-btns"><a asp-action="MeetingMemberAddEdit" asp-controller="MeetingMember" class="btn btn-sm btn-outline-primary rounded-pill">Edit</a><a class="btn btn-sm btn-outline-danger rounded-pill" onclick="return confirm('Delete?')">Delete</a></div></td></tr>

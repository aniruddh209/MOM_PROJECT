@model MOM_PROJECT.Models.DepartmentModel

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Edit Department</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />

  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />

  <style>
    body{
      background: linear-gradient(135deg,#eef2ff,#f8fafc);
      font-family: "Inter", sans-serif;
    }

    /* PAGE HEADER */
    .page-title{
      font-size:28px;
      font-weight:700;
    }
    .page-subtitle{
      color:#6b7280;
    }

    /* CARD */
    .card{
      border:none;
      border-radius:18px;
      background:#ffffff;
      box-shadow:0 15px 40px rgba(79,70,229,0.12);
      max-width:900px;
      margin:auto;
    }

    /* CARD HEADER */
    .card-header{
      background: linear-gradient(135deg,#6366f1,#7c3aed);
      color:#ffffff;
      font-size:18px;
      font-weight:600;
      padding:16px 24px;
      border-radius:18px 18px 0 0;
    }

    /* CARD BODY */
    .card-body{
      padding:30px;
    }

    /* FORM */
    .form-label{
      font-weight:500;
      color:#1e1b4b;
    }

    .form-control{
      border-radius:12px;
      padding:14px 16px;
    }

    .form-control:focus{
      box-shadow:0 0 0 .15rem rgba(79,70,229,.25);
      border-color:#6366f1;
    }

    /* ICON INPUT */
    .input-group-text{
      background:#f8fafc;
      border-radius:12px 0 0 12px;
    }

    /* BUTTONS */
    .btn-primary{
      background: linear-gradient(135deg,#4f46e5,#6366f1);
      border:none;
      padding:10px 24px;
      border-radius:999px;
    }

    .btn-secondary{
      border-radius:999px;
    }
  </style>
</head>

<body>

<div class="container-fluid mt-4">

  <!-- PAGE TITLE -->
  <div class="mb-4">
    <div class="page-title">Edit Department</div>
    <div class="page-subtitle">Add or Update</div>
  </div>

  <!-- CARD -->
  <div class="card">

    <!-- CARD HEADER -->
    <div class="card-header">
      üè¢ Edit Department
    </div>

    <!-- CARD BODY -->
    <div class="card-body">

      <form asp-controller="Department" asp-action="DepartmentSave" method="post">

        <!-- ‚úÖ Added Hidden ID for Edit -->
        <input type="hidden" asp-for="DepartmentID" />
        

        <!-- DEPARTMENT NAME -->
        <div class="mb-3">
          <label class="form-label">Department Name</label>
          <div class="input-group">
            <span class="input-group-text">üè¢</span>
            <input type="text"
                   class="form-control"
                   value="Customer Service"
                   placeholder="Enter department name"
                   asp-for="DepartmentName" />
          </div>

          <!-- ‚úÖ Added Field Validation Message -->
          <span asp-validation-for="DepartmentName" class="text-danger"></span>

          <small class="text-muted">
            e.g., Human Resources, Information Technology, Finance
          </small>
        </div>

        <!-- ACTION BUTTONS -->
        <div class="mt-4 text-end">
          <a asp-controller="Department"
             asp-action="DepartmentList"
             class="btn btn-secondary">
            ‚Üê Back to List
          </a>

          <button type="submit" class="btn btn-primary">
            ‚úî Update Department
          </button>
        </div>

      </form>

    </div>
  </div>

</div>

<!-- ‚úÖ Added Client Side Validation Scripts -->
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/jquery-validation@1.19.5/dist/jquery.validate.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/jquery-validation-unobtrusive@4.0.0/dist/jquery.validate.unobtrusive.min.js"></script>

</body>
</html>

